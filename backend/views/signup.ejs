<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.css"
    />
    <title>Document</title>
  </head>
  <body>
    <h1>Signup</h1>
    <form id="signupForm">
      <h2 class="title">Join us Now!</h2>
      <div class="input-field join-input">
        <input
          type="text"
          placeholder="Your First Name"
          name="fname"
          required
        />
      </div>
      <div class="input-field join-input">
        <input type="text" placeholder="Your Middle Name" name="mname" />
      </div>
      <div class="input-field join-input">
        <input type="text" placeholder="Your Last Name" name="lname" required />
      </div>
      <div class="input-field join-input">
        <input type="text" placeholder="Suffix" name="suffix" />
      </div>
      <div class="input-field join-input">
        <input type="text" placeholder="Address 1" name="addr1" required />
      </div>
      <div class="input-field join-input">
        <input type="text" placeholder="Address 2" name="addr2" />
      </div>
      <div class="input-field join-input">
        <input
          type="text"
          placeholder="Your Country"
          name="country"
          required
          pattern="[A-Za-z]{2}"
          title="Country code should be 2 characters per ISO 3166"
        />
      </div>
      <div class="input-field join-input">
        <input type="text" placeholder="Your City" name="city" required />
      </div>
      <div class="input-field join-input">
        <input type="text" placeholder="State/Province" name="state" required />
      </div>
      <div class="input-field join-input">
        <input
          type="text"
          placeholder="Your Zip Code"
          name="zipcode"
          required
        />
      </div>
      <div class="input-field join-input">
        <input type="email" placeholder="Your Email" name="email" required />
      </div>
      <div class="input-field join-input">
        <input
          type="password"
          placeholder="Your Password"
          name="password"
          required
        />
      </div>
      <button type="submit" class="btn btn-block btn-solid">Sign UP</button>
    </form>

    <script src="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.js"></script>
    <script>
      document
        .getElementById("signupForm")
        .addEventListener("submit", async function (e) {
          e.preventDefault();
          const formData = new FormData(e.target);
          const data = Object.fromEntries(formData);

          const notyf = new Notyf();

          try {
            const response = await fetch("http://localhost:4000/user/signup", {
              method: "POST",
              headers: {
                "Content-Type": "application/json",
              },
              body: JSON.stringify(data),
            });

            if (response.ok) {
              const result = await response.json();
              notyf.success("Signup successful!");
              console.log(result);
            } else {
              const error = await response.json();
              notyf.error("Signup failed! " + error.message);
              console.error(error);
            }
          } catch (error) {
            notyf.error("Error: " + error.message);
            console.error("Error:", error);
          }
        });
    </script>
  </body>
</html>
